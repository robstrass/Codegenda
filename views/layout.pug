doctype html
html
  head
      block head
        title="Codegenda"
        link(rel='stylesheet' href='/stylesheets/index.css')
  body
      nav(class="nav-bar")
        a(class="brand nav-link" href="/") CodeGenda
        if locals.authenticated
          div.search-input
            form(action="/search" method="get")
              input(name="term" type="search" id="searchTerm" placeholder="Search project")
            button(class='search-button' id='search-button') Search
          div(class='rightBtn') Welcome!
            form(class='' action='/users/logout' method='post')
              button(class='logout-btn' href='/' type='submit') Logout
        else
          div(class='rightBtn')
            a(class='nav-link' href='/users/login') Login
            a(class='nav-link' href='/users/signup') Sign Up!
            form(action='/users/' method='post')
              button.navBarLoginBtn Demo User
      div.wrapper
        div.sideBar
        div.mainContent
          block content
        div.sideBar
          //- div(id="single-project") Project Name Placeholder
      block footer
        div.footer-container
          div.footer-element
            p.creator Israel Romero
            a.github-link(href="https://github.com/snakedreamz")
              img(src="/github-icon.png", alt="github" class="github-img")
          div.footer-element
            p.creator Rob Strasser
            a.github-link(href="https://github.com/robstrass")
              img(src="/github-icon.png", alt="github" class="github-img")
